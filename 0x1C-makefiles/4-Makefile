CC = gcc
SRC = main.c school.c 
OBJ = ${SRC:.c=.o}
NAME = school
RM = -rm
CFLAGS = -Wall -Werror -Wextra -pedantic
all: ${OBJ}
	${CC} ${CFLAGS} ${OBJ} -o ${NAME}
clean:
	${RM} ./ -name '*~' | xargs ${RM}
oclean:
	${RM} ${OBJ}
fclean:
	${RM} ${OBJ} ${NAME} ./ -name '*~' | xargs ${RM}
re:
	${RM} *.so 
	${RM} *.o